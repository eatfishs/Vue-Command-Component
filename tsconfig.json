{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "ES2016",
    "skipLibCheck": true,
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {},
    "types": [
      "node",
      "vite/client",
      "vue"
    ],
  },
  "include": [
    "env.d.ts",
    "./typed-router.d.ts",
    "vite.config.*",
    "packages/core/src/**/*",
    "packages/docs/**/*",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
}
